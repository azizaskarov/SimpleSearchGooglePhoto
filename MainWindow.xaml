                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>-->

        <Button Content="Save Image" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="76" Height="18" Margin="10,10,0,0" Click="SaveImage_Click"/>
    </Grid>
</Window>
