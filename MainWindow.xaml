<Window x:Class="SimpleSearchGooglePhoto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleSearchGooglePhoto"
        mc:Ignorable="d"   
        Title="Image Search App" Height="730"  Width="1024" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Name="SearchTextBox" HorizontalAlignment="Left" KeyDown="SearchTextBox_OnKeyDown" VerticalAlignment="Top" Margin="10,10,0,0" Width="300"/>
        <Button Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="18" Margin="320,10,0,0" Click="SearchButton_Click"/>
        <Button Name="nextBtn" Content="Next" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="18" Margin="400,10,0,0" Click="NextClick"/>

        <!--<ListBox Name="ImageListBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Width="1004" Height="699">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Width="150" Height="150" Source="{Binding}" Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->

        <ListBox  Margin="0,50,0,0"  x:Name="ImageListBox"
                  ItemsSource="{Binding}" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!--<CheckBox Height="16" VerticalAlignment="Top" Margin="0,10,0,0"/>-->
                        <Image Width="150" Height="150" Source="{Binding}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Window>
