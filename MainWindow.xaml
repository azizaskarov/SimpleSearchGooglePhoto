<Window x:Class="SimpleSearchGooglePhoto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleSearchGooglePhoto"
        mc:Ignorable="d"  AllowsTransparency="True"
        Title="Image Search App" Height="730" WindowStyle="None"  Width="1024" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#5A7BEC"  Height="40" MouseDown="GridMouseDown">
            <Label Content="Google photos" Foreground="#FFFFFF"  FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10 0 0 0"/>

            <Button Width="40" Height="40" Background="#5A7BEC"  HorizontalAlignment="Right" Margin="0 0 0 0" Padding="0" Click="ExitBtn_Click" Visibility="Visible">
                <TextBlock Text="X" Width="15" Height="15" />
            </Button>

        </Grid>

        <TextBox Grid.Row="1" Name="SearchTextBox" KeyDown="SearchTextBox_OnKeyDown" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="300"/>
        <Button Grid.Row="1" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="18" Margin="320,10,0,0" Click="SearchButton_Click"/>
        <Button Grid.Row="1" Name="nextBtn" Content="Next" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="18" Margin="400,10,0,0" Click="NextClick"/>

        <!--<ListBox Grid.Row="1" Name="ImageListBox" Margin="10,50,10,40" SelectionChanged="ImageListBox_SelectionChanged"  SelectionMode="Multiple" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">

                        <Image Width="150" Height="150" Source="{Binding}" Margin="5"/>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>-->

        <ListBox Grid.Row="1" Name="ImageListBox" Margin="10,50,10,40" SelectionChanged="ImageListBox_SelectionChanged" SelectionMode="Multiple" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <Image Width="150" Height="150" Source="{Binding}" Margin="5"/>

                        <TextBlock Text=" Главново " Margin="5 0 0 0"  Background="#5A7BEC" Foreground="#FFFFFF" Height="20"  FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Bottom" >
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>

            </ListBox.ItemTemplate>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <!--<ListBox Grid.Row="1" Name="ImageListBox" Margin="10,50,10,40" SelectionChanged="ImageListBox_SelectionChanged" SelectionMode="Multiple" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <Image Width="150" Height="150" Source="{Binding}" Margin="5"/>
